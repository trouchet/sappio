{
  "name": "sappio",
  "description": "A minimal node app with logging.",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trouchet/sappio.git"
  },
  "imports": {
    "#utils/*": "./src/core/utils/*.js",
    "#utils/*.js": "./src/core/utils/*.js",
    "#config/*": "./src/config/*.js",
    "#config/*.js": "./src/config/*.js"
  },
  "keywords": [
    "nodejs"
  ],
  "author": "brunolnetto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trouchet/sappio/issues"
  },
  "homepage": "https://github.com/trouchet/sappio#readme",
  "scripts": {
    "init": "./scripts/npm-init.sh",
    "start": "nodemon --trace-warnings --experimental-modules --es-module-specifier-resolution=node ./src/index.js",
    "build": "./scripts/npm-build.sh",
    "update": "bash ./scripts/npm-update.sh",
    "hooks:prepare": "husky install",
    "pm2:deploy": "pm2 start ./src/config/pm2_configs.js --attach --watch --time --wait-ready",
    "test:clear_cache": "jest  --clearCache",
    "test": "npm run test:clear_cache && jest --detectOpenHandles",
    "test:ci": "jest --ci --collect-coverage --coverage",
    "test:watch": "jest --watchAll --collect-coverage --coverage",
    "db:seeds": "knex --env ${KNEX_ENV} --knexfile ./src/config/knexfile.js seed:run",
    "db:seeds:local": "knex --env dockerLocal --knexfile ./src/config/knexfile.js seed:run",
    "up": "npm run init && npm run docker:deploy --tag=$npm_config_tag --from=$npm_config_from --to=$npm_config_to",
    "docker:clean": "./scripts/docker-clean.sh $npm_config_tag",
    "docker:deploy": "./scripts/docker-deploy.sh $npm_config_tag $npm_config_from $npm_config_to",
    "docker:watch": "./scripts/docker-deploy.sh $npm_config_tag",
    "eslint:github-action": "eslint src/",
    "format": "prettier --write . && prettier --check .",
    "get-version": "echo $npm_package_version"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "bats": "^1.8.2",
    "bats-assert": "github:ztombol/bats-assert",
    "bats-support": "github:ztombol/bats-support",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "jest-slow-test-reporter": "^1.0.0",
    "prettier": "^2.8.3",
    "pug": "^3.0.2",
    "sinon": "^15.0.1",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8"
  },
  "engines": {
    "node": " >=16.0.0",
    "npm": ">=6.9.0"
  },
  "dependencies": {
    "@babel/core": "^7.20.12",
    "@babel/preset-env": "^7.20.2",
    "@logtail/node": "^0.2.0",
    "@logtail/winston": "^0.2.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-actuator": "^1.8.4",
    "express-jwt": "^8.3.0",
    "express-merror": "^1.0.0",
    "express-rate-limit": "^6.7.0",
    "express-route-parser": "^1.0.5",
    "express-youch": "^1.0.1",
    "fs": "^0.0.1-security",
    "helmet": "^6.0.1",
    "http-errors": "^2.0.0",
    "jest-progress-bar-reporter": "^1.0.25",
    "jsrsasign": "^10.6.1",
    "jwt-decode": "^3.1.2",
    "knex": "^2.4.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "pg": "^8.8.0",
    "serve-favicon": "^2.5.0",
    "swagger-stats": "^0.99.5",
    "swagger-ui-express": "^4.6.0",
    "winston": "^3.8.2"
  }
}
