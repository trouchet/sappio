{
  "name": "sappio",
  "description": "A minimal node app with logging.",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trouchet/sappio.git"
  },
  "keywords": [
    "nodejs",
    "app"
  ],
  "author": "brunolnetto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trouchet/sappio/issues"
  },
  "homepage": "https://github.com/trouchet/sappio#readme",
  "scripts": {
    "init": "npm run hooks:prepare && npm ci && npm run build && npm audit fix && npm run db:init",
    "db:init": "npm run migrations && npm run seeds",
    "hooks:prepare": "husky install",
    "start": "nodemon --trace-warnings  ./src/index.js",
    "node:build": "./scripts/node-build.sh",
    "docker:build": "./scripts/docker-build.sh",
    "build": "npm run node:build && npm run docker:build",
    "pm2:deploy": "pm2 start ./src/config/pm2_configs.js --attach --watch --time --wait-ready",
    "test": "jest --collect-coverage --coverage",
    "test:ci": "jest --ci --clearCache --collect-coverage --coverage",
    "test:watch": "jest --watchAll --collect-coverage --coverage",
    "db:seeds": "knex --env ${KNEX_ENV} --knexfile ./src/config/knexfile.js seed:run",
    "db:seeds:local": "knex --env dockerLocal --knexfile ./src/config/knexfile.js seed:run",
    "db:migrations": "knex --env ${KNEX_ENV} --knexfile ./src/config/knexfile.js migrate:latest",
    "db:migrations:local": "knex --env dockerLocal --knexfile ./src/config/knexfile.js migrate:latest",
    "update": "bash ./src/config/update.sh",
    "docker:init": "npm run init && npm run docker:deploy --tag=$npm_config_tag --from=$npm_config_from --to=$npm_config_to",
    "docker:clean": "./scripts/docker-clean.sh $npm_config_tag",
    "docker:deploy": "./scripts/docker-deploy.sh $npm_config_tag $npm_config_from $npm_config_to",
    "docker:watch": "./scripts/docker-deploy.sh $npm_config_tag",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "get-version": "echo $npm_package_version"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.5",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.20.2",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^29.3.1",
    "bats": "^1.8.2",
    "bats-assert": "github:ztombol/bats-assert",
    "bats-support": "github:ztombol/bats-support",
    "eslint": "8.29.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-google": "0.14.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.1.6",
    "eslint-scope": "7.1.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-express": "^1.12.0",
    "jest-light-runner": "^0.4.1",
    "jest-progress-bar-reporter": "^1.0.25",
    "jest-slow-test-reporter": "^1.0.0",
    "prettier": "^2.8.0",
    "superagent": "^8.0.4",
    "supertest": "^6.0.0",
    "swagger-autogen": "^2.22.0",
    "swagger-jsdoc": "^6.2.5",
    "ts-jest": "^29.0.3"
  },
  "engines": {
    "node": " >=16.0.0",
    "npm": ">=6.9.0"
  },
  "dependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@logtail/node": "^0.1.14",
    "@logtail/winston": "^0.1.14",
    "axios": "^1.2.0",
    "compression": "^1.7.4",
    "concurrently": "^7.6.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "express-actuator": "^1.8.2",
    "express-json-validator-middleware": "^3.0.1",
    "express-jwt": "^7.7.7",
    "express-merror": "^1.0.0",
    "express-rate-limit": "^6.7.0",
    "express-route-parser": "^1.0.5",
    "express-validator": "^6.14.2",
    "express-youch": "^1.0.1",
    "helmet": "^6.0.0",
    "http-errors": "^2.0.0",
    "jsrsasign": "^10.6.1",
    "jsrsasign-util": "^1.0.5",
    "knex": "^2.3.0",
    "lodash": "^4.17.21",
    "logrocket": "^3.0.1",
    "morgan": "^1.10.0",
    "morgan-json": "^1.1.0",
    "nodemailer": "^6.8.0",
    "nodemon": "^2.0.20",
    "pg": "^8.8.0",
    "prom-client": "12.0.0",
    "pug": "^3.0.2",
    "serve-favicon": "^2.5.0",
    "swagger-stats": "^0.99.2",
    "swagger-ui-express": "^4.6.0",
    "tx2": "^1.0.5",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  }
}
