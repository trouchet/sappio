{
  "name": "sappio",
  "description": "A minimal node app with logging.",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trouchet/sappio.git"
  },
  "keywords": [
    "nodejs"
  ],
  "author": "brunolnetto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/trouchet/sappio/issues"
  },
  "homepage": "https://github.com/trouchet/sappio#readme",
  "scripts": {
    "init": "./scripts/npm-init.sh",
    "start": "nodemon --trace-warnings --experimental-modules --es-module-specifier-resolution=node ./src/index.js",
    "build": "./scripts/npm-build.sh",
    "update": "bash ./scripts/npm-update.sh",
    "db:init": "npm run migrations && npm run seeds",
    "hooks:prepare": "husky install",
    "pm2:deploy": "pm2 start ./src/config/pm2_configs.js --attach --watch --time --wait-ready",
    "test": "jest",
    "test:ci": "jest --ci --clearCache --collect-coverage --coverage",
    "test:watch": "jest --watchAll --collect-coverage --coverage",
    "db:seeds": "knex --env ${KNEX_ENV} --knexfile ./src/config/knexfile.js seed:run",
    "db:seeds:local": "knex --env dockerLocal --knexfile ./src/config/knexfile.js seed:run",
    "db:migrations": "knex --env ${KNEX_ENV} --knexfile ./src/config/knexfile.js migrate:latest",
    "db:migrations:local": "knex --env dockerLocal --knexfile ./src/config/knexfile.js migrate:latest",
    "up": "npm run init && npm run docker:deploy --tag=$npm_config_tag --from=$npm_config_from --to=$npm_config_to",
    "docker:clean": "./scripts/docker-clean.sh $npm_config_tag",
    "docker:deploy": "./scripts/docker-deploy.sh $npm_config_tag $npm_config_from $npm_config_to",
    "docker:watch": "./scripts/docker-deploy.sh $npm_config_tag",
    "eslint:github-action": "eslint src/",
    "format": "prettier --write . && prettier --check .",
    "get-version": "echo $npm_package_version"
  },
  "devDependencies": {
    "@babel/core": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@microsoft/eslint-formatter-sarif": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "5.47.1",
    "@typescript-eslint/parser": "5.47.1",
    "bats": "^1.8.2",
    "bats-assert": "github:ztombol/bats-assert",
    "bats-support": "github:ztombol/bats-support",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^27.1.7",
    "eslint-plugin-jest-extended": "^2.0.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "jest-express": "^1.12.0",
    "jest-slow-test-reporter": "^1.0.0",
    "prettier": "^2.8.1",
    "pug": "^3.0.2",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.7"
  },
  "engines": {
    "node": " >=16.0.0",
    "npm": ">=6.9.0"
  },
  "dependencies": {
    "@babel/core": "^7.20.7",
    "@babel/preset-env": "^7.20.2",
    "@logtail/node": "^0.1.14",
    "@logtail/winston": "^0.1.14",
    "axios": "^1.2.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-actuator": "^1.8.2",
    "express-json-validator-middleware": "^3.0.1",
    "express-jwt": "^8.2.1",
    "express-merror": "^1.0.0",
    "express-rate-limit": "^6.7.0",
    "express-route-parser": "^1.0.5",
    "express-validator": "^6.14.2",
    "express-youch": "^1.0.1",
    "fs": "^0.0.1-security",
    "helmet": "^6.0.1",
    "http-errors": "^2.0.0",
    "jsrsasign": "^10.6.1",
    "knex": "^2.3.0",
    "lodash": "^4.17.21",
    "logrocket": "^3.0.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.20",
    "pg": "^8.8.0",
    "serve-favicon": "^2.5.0",
    "swagger-stats": "^0.99.4",
    "swagger-ui-express": "^4.6.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.2"
  }
}
