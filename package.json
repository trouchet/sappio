{
  "name": "sappio",
  "description": "A minimal node app with logging.",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/web-thread/sappio.git"
  },
  "keywords": [
    "nodejs",
    "app"
  ],
  "author": "brunolnetto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/web-thread/sappio/issues"
  },
  "homepage": "https://github.com/web-thread/sappio#readme",
  "scripts": {
    "build": "npm run node:build && npm run docker:build",
    "migrations": "knex --env ${KNEX_ENV} --knexfile knexfile.js migrate:latest",
    "migrations:local": "export KNEX_ENV=test && npm run migrations",
    "node:build": "./utils/scripts/node-build.sh",
    "docker:build": "./utils/scripts/docker-build.sh",
    "docker:deploy": "./utils/scripts/docker-deploy.sh $npm_config_tag $npm_config_from $npm_config_to",
    "docker:watch": "./utils/scripts/docker-deploy.sh $npm_config_tag",
    "update": "bash ./utils/scripts/update.sh",
    "start": "nodemon ./src/index.js",
    "nibble": "npx eslint-nibble .",
    "fixable-nibble": "npx eslint-nibble --fixable-only .",
    "get-version": "echo $npm_package_version"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.40.1",
    "@typescript-eslint/parser": "5.40.1",
    "eslint": "8.25.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-google": "0.14.0",
    "eslint-nibble": "^8.1.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.1.1",
    "eslint-scope": "7.1.1"
  },
  "engines": {
    "node": " >=16.0.0",
    "npm": ">=6.9.0"
  },
  "dependencies": {
    "@logtail/node": "^0.1.12",
    "@logtail/winston": "^0.1.13",
    "express-rate-limit": "^6.6.0",
    "express-title": "^0.1.0",
    "helmet": "^6.0.0",
    "lodash": "^4.17.21",
    "quivero-api": "^6.0.4",
    "serve-favicon": "^2.5.0"
  }
}
